<h2 class="text-3xl mb-5">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="w-full lg:w-1/2 flex flex-col space-y-4">
    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-input", autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "form-input", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Log In", class: "button-primary" %>
  </div>
<% end %>

<small>
  <%= link_to "Sign up", signup_path %> |
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</small>
