<div class="row">
  <div class="col">
    <%= link_to "New Track", new_track_path, class: "btn btn-primary float-right" %>
  </div>
</div>

<div class="row">
  <% @tracks.each do |track| %>
    <div class="col col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">
            <%= track.name %>
          </h5>
          <p class="card-text"></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
